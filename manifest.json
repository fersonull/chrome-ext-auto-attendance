{
    "manifest_version": 3,
    "name": "Automated Attendace",
    "version": "1.0",
    "description": "A simple extension that says hello.",
    "action": {
        "default_icon": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://pmftci.com/college"
            ],
            "js": [
                "lib/utils.js",
                "scripts/load_subjects.js"
            ]
        },
        {
            "matches": [
                "https://pmftci.com/college/my-subjects"
            ],
            "js": [
                "lib/utils.js",
                "scripts/view_lesson.js"
            ]
        },
        {
            "matches": [
                "https://pmftci.com/college/view-subject-lessons/*"
            ],
            "js": [
                "lib/utils.js",
                "scripts/attend.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}